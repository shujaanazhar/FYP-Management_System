@page
@model StudentHomePageModel
@{
    ViewData["Title"] = "Student Home Page";
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<style>
    /* Center align the page content */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Style for the student information container */
    .student-info {
        width: 400px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    /* Style for the headings */
    h1, h2 {
        text-align: center;
        color: #333;
    }

    /* Style for the student information list */
    ul {
        list-style-type: none;
        padding: 0;
    }

    ul li {
        margin-bottom: 10px;
    }
   
    .container {
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    button {
        padding: 8px 16px;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

    .approve-button {
        background-color: lightgreen;
        color: white;
    }

    .reject-button {
        background-color: lightcoral;
        color: white;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }
</style>

<div class="container">
    <h1>Welcome, @Model.Email!</h1>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" id="studentTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="student-personal-tab" data-bs-toggle="tab" href="#student-personal" role="tab" aria-controls="student-personal" aria-selected="true">Personal Information</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="fyp-tab" data-bs-toggle="tab" href="#fyp" role="tab" aria-controls="fyp" aria-selected="false">FYP Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="fyp-proposal-tab" data-bs-toggle="tab" href="#fyp-proposal" role="tab" aria-controls="fyp-proposal" aria-selected="false">FYP Proposal</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="student-personal" role="tabpanel" aria-labelledby="student-personal-tab">
            <p>Student Information:</p>
            <ul>
                <li><strong>Email:</strong> @Model.Email</li>
                <li><strong>Batch:</strong> @Model.Batch</li>
                <li><strong>Department:</strong> @Model.Department</li>
                <li><strong>CGPA:</strong> @Model.CGPA</li> 
            </ul>
        </div>

        <div class="tab-pane fade" id="fyp" role="tabpanel" aria-labelledby="fyp-tab">
            <h2>FYP Details</h2>
            @if (Model.FYP_Name != null)
            {
                <p><strong>FYP Name:</strong> @Model.FYP_Name</p>
                <p><strong>Supervised ID:</strong> @Model.SupervisorID</p>
                <p><strong>Details:</strong> @Model.Details</p>
                <p><strong>Domain:</strong> @Model.Domain</p>
            }
            else
            {
                <p>No FYP </p>
            }
        </div>
        <div class="tab-pane fade" id="fyp-proposal" role="tabpanel" aria-labelledby="fyp-proposal-tab">
            <h2>FYP Details</h2>
            <div class="container">
                <div class="student-info">
                    <h1>Welcome, @Model.Email!</h1>

                    <div>
                        <p>Student Information:</p>
                        <ul>
                            <li><strong>Email:</strong> @Model.Email</li>
                            <li><strong>Batch:</strong> @Model.Batch</li>
                            <li><strong>Department:</strong> @Model.Department</li>
                            <li><strong>FYP Name:</strong> @Model.FYP_Name</li>
                            <li><strong>CGPA:</strong> @Model.CGPA</li>
                        </ul>
                    </div>

                    <h2>Submit FYP Proposal</h2>
                    <form method="post">
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control" id="title" name="Title" required>
                        </div>
                        <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea class="form-control" id="description" name="Description" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Proposal</button>
                        <!-- Button to attach a document -->
                        <button type="button" class="btn btn-secondary attach-button" onclick="OptionSelected()">Attach Document</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Bootstrap's tab JavaScript plugin initialization
            $('#studentTabs a').on('click', function (e) {
                e.preventDefault()
                $(this).tab('show')
            });

            // Activate the first tab by default
            $('#studentTabs a:first').tab('show');
        });
    </script>
}
